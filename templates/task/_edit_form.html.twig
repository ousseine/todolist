<form method="post" action="{{ path('app_task_edit', {'id': task.id}) }}" class="w-100 form-edit ms-2">
    <div class="input-group">
        <input type="text" name="task" value="{{ task.name }}" class="form-control" id="form-input-task-edit">
        <button type="submit" class="input-group-text btn btn-sm p-0 me-1"><i class="bi bi-check2-circle"></i></button>
    </div>
    <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ task.id) }}">
</form>